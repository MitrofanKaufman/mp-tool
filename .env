# ======================
# Server Configuration
# ======================
NODE_ENV=development
HOST=localhost
PORT=8081
CORS_ORIGIN=*
JWT_SECRET=your-temporary-secret-key-for-development

## ======================
## Security
## ======================
#JWT_SECRET=your_secure_jwt_secret_here
#JWT_EXPIRES_IN=30d
#COOKIE_SECRET=your_cookie_secret_here
#CORS_ORIGIN=http://localhost:8081,http://127.0.0.1:8081
#RATE_LIMIT_MAX=100
#RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
#
## ======================
## Database
## ======================
#DB_HOST=localhost
#DB_PORT=3306
#DB_USER=root
#DB_PASSWORD=your_secure_db_password
#DB_NAME=wbapp
#DB_POOL_MIN=2
#DB_POOL_MAX=10
#
## ======================
## Redis (for BullMQ, sessions, rate limiting)
## ======================
#REDIS_HOST=localhost
#REDIS_PORT=6379
#REDIS_PASSWORD=
#REDIS_DB=0
#REDIS_KEY_PREFIX=wbapi:
#
## ======================
## WebSocket
## ======================
#WS_PATH=/ws
#WS_MAX_PAYLOAD=1048576  # 1MB
#WS_PING_INTERVAL=30000  # 30 seconds
#WS_MAX_CONNECTIONS=1000
#
## ======================
## Wildberries API
## ======================
#WB_API_KEY=your_wildberries_api_key
#WB_API_URL=https://suppliers-api.wildberries.ru
#WB_API_TIMEOUT=10000  # 10 seconds
#WB_API_RETRIES=3
#WB_API_RETRY_DELAY=1000  # 1 second
#
## ======================
## Proxy Configuration
## ======================
#HTTP_PROXY=
#HTTPS_PROXY=
#NO_PROXY=localhost,127.0.0.1
#PROXY_ENABLED=false
#
## ======================
## Logging & Monitoring
## ======================
#LOG_TO_FILE=true
#LOG_DIR=./logs
#LOG_MAX_SIZE=10485760  # 10MB
#LOG_MAX_FILES=14  # Keep logs for 14 days
#
## ======================
## Admin & Authentication
## ======================
#ADMIN_EMAIL=admin@example.com
#ADMIN_PASSWORD=change_this_password
#DEFAULT_USER_ROLE=user
#ADMIN_ROLES=admin,superadmin
#
## ======================
## Email (for notifications)
## ======================
#SMTP_HOST=smtp.example.com
#SMTP_PORT=587
#SMTP_SECURE=false
#SMTP_USER=user@example.com
#SMTP_PASSWORD=your_smtp_password
#SMTP_FROM=\"WB API Server\" <noreply@example.com>\"
#
## ======================
## Feature Flags
## ======================
#FEATURE_WEBSOCKET=true
#FEATURE_GRAPHQL=false
#FEATURE_API_DOCS=true
#FEATURE_RATE_LIMITING=true
#
## ======================
## Performance
## ======================
#NODE_OPTIONS=--max-old-space-size=2048
#UV_THREADPOOL_SIZE=16
#MAX_EVENT_LISTENERS=100
#
## ======================
## External Services
## ======================
#SENTRY_DSN=your_sentry_dsn_here
#NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
#
## ======================
## Development & Debugging
## ======================
#DEBUG=app:*,ws:*,wb:*
#NODE_ENV=development
#NODE_TLS_REJECT_UNAUTHORIZED=0  # Only for development!
